{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "src": "src/swagger/swagger.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**/*", "src/swagger/swagger.json"]
      }
    }
  ],
  "routes": [
    {
      "src": "/swagger.json",
      "dest": "src/swagger/swagger.json"
    },
    {
      "src": "/api-docs",
      "dest": "src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "src/server.ts"
    }
  ]
}
